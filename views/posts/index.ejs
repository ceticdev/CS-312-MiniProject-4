<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>My Blog</h1>
            <% if (session.user) { %>
                <a href="/auth/logout" class="btn">Logout</a>
            <% } %>
        </header>
        <main>
            <a href="/posts/new" class="btn">New Post</a>
            <% posts.forEach(post => { %>
                <article>
                    <h2><%= post.title %></h2>
                    <small>By <%= post.creator_name %> on <%= new Date(post.date_created).toLocaleDateString() %></small>
                    <p><%= post.body.substring(0, 100) %>...</p>
                    <a href="/posts/<%= post.blog_id %>" class="btn">Read More</a>
                    <% if (session.user && session.user.id === post.creator_user_id) { %>
                        <a href="/posts/<%= post.blog_id %>/edit" class="btn">Edit</a>
                        <form action="/posts/<%= post.blog_id %>/delete" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </article>
            <% }) %>
        </main>
    </div>
</body>
</html>
